        xmlns:local="clr-namespace:Capitulo4"
        mc:Ignorable="d"
        Title="Calculadora de Tablas" Height="422" Width="570">
    <Grid Height="393" VerticalAlignment="Top" HorizontalAlignment="Center" Width="570">
