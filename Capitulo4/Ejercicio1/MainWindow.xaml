        <ListView x:Name="Resultado" d:ItemsSource="{d:SampleData ItemCount=Resultado}" Margin="364,19,0,66"  HorizontalAlignment="Left" Width="191" FontFamily="Times New Roman" FontSize="18" Background="#FF0DB3AF" FontWeight="Normal">
        </ListView>
        <TextBox x:Name = "txtNum1" HorizontalAlignment="Left" Margin="175,122,0,0" Text="" VerticalAlignment="Top" Width="100" Height="34"/>
        <TextBlock HorizontalAlignment="Left" Margin="64,126,0,0" Text="Tabla a multiplicar:" VerticalAlignment="Top" Height="22" Width="107">

        </TextBlock>
       
    </Grid>
</Window>
